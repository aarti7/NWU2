<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @registry.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @registry.location %>
</p>

<p>
  <strong>Open:</strong>
  <%= @registry.open %>
</p>

<p>
  <strong>Coordinators:</strong>
  <%= @coordinator_emails_string %>
</p>


<h2>Listing Participants</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participant_list.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.gender %></td>
        <td><%= participant.date_of_birth %></td>
      </tr>
    <% end %>
  </tbody>
</table>

